{% if collections[restaurant_tag].length %}
  <h1>Restaurants in {{ title }}</h1>
  <ul>
  {% for restaurant in collections[restaurant_tag] %}
    <li><a href="{{ restaurant.url | url }}">{{ restaurant.data.title }}</a></li>
  {% endfor %}
  </ul>
{% else %}
  <h1>No restaurants found in {{ title }}</h1>
{% endif %}
